<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="project_task_vehicle_form" model="ir.ui.view">
			<field name="name">project_task_vehicle.form</field>
			<field name="model">project.task</field>
			<field name="inherit_id" ref="project.view_task_form2"/>
			<field name="arch" type="xml">
				<notebook position="inside">
                    <page string="Vehicle Information">
                    	<group>
                        <group>
                            <field name="vehicle_model" colspan="2"/>
                            <field name="license_plate" colspan="2"/>

                        </group>
                        <group>
                        	<field name="source_date" />
                        	<field name="destination_date" />
                        </group>
                    </group>
                    </page>
                </notebook>
            </field>
		</record>
	</data>
</odoo>